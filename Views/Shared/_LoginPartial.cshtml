@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="btn btn-light" asp-controller="Rating" asp-action="Index">Оценки</a>
    </li>
    <a  class="btn btn-secondary" asp-controller="Account" asp-action="Logout">Logout</a>
}
else
{
    <li class="nav-item">
        <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="btn btn-secondary" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul>
